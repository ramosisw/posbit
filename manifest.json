{
    "manifest_version" : 2,
    "name"             : "Posbit",
    "short_name"       : "posbit",
    "version"          : "2.3",
    "description"      : "Bitso tool, ayuda en la toma de decisiones para comprar o vender criptomonedas.",
    "options_page"     : "options.html",
    "content_scripts": [{
        "matches": ["https://*.bitso.com/*"],
        "js": [
            "js/posbitlib.js",
            "js/localstoragedb.min.js",
            "js/posbitcore.js",
            "js/contentscript.js"
        ]
    }],
    "background": {
        "scripts": [
            "js/posbitlib.js",
            "js/jquery.min.js",
            "js/localstoragedb.min.js",
            "js/background.js"
        ]
    },
    "permissions": [
        "notifications"
    ],
    "icons": {
        "16"  : "icons/icon16x16.png",
        "19"  : "icons/icon19x19.png",
        "48"  : "icons/icon48x48.png",
        "128" : "icons/icon128X128.png"
    }
}
